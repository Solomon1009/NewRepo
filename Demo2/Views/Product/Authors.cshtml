@model IEnumerable<Demo2.Models.Author>

@{
    ViewBag.Title = "Authors";
    int dem = 0;
}

<h2>Danh sách Book</h2>

@foreach (var item in Model)
{
    dem++;
    <div class="templatemo_product_box">
        <h1>@item.Name</h1>
        <img src="@item.Image" alt="image" style="width: 100px; height: 150px">
        <div class="product_info">
            <p>Birth of Date: DD MM YYYY</p>
            <p>Books: XXX</p>
            <div class="detail_button"><a href="/Product/AuthorDetails/@item.Id">Detail</a></div>
        </div>
        <div class="cleaner">&nbsp;</div>
    </div>
    if (dem % 2 == 1)
    {
        <div class="cleaner_with_width">&nbsp;</div>
    }
    else
    {
        <div class="cleaner_with_height">&nbsp;</div>
    }
}

</table>
